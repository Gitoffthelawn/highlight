{
  "name": "Highlight",
  "version": "1.0",
  "description": "Highlight the Important Content on Article Sites",
  "content_scripts": [ {
      "js": [ "src/ping.js" ],
      "matches": [ "<all_urls>" ],
      "run_at": "document_start",
      "all_frames": false // no need for iframes for ping script
  }, {
      "js": [ "src/prepare.js",
              "src/lib/readabilitySAX.js",
              "src/lib/PorterStemmer1980.js",
              "src/nlp.js",
              "src/utils.js",
              "src/content.js" ],
      "css" : ["src/style.css"],
      "matches": [ "<all_urls>" ],
      "all_frames": true // work on iframes too
  } ],
  // "tabs" and "*://*/*" permissions specified below for loading content script on extension install/reload
  "permissions": ["tabs", "*://*/*", "storage"],
  "background": { "scripts": ["src/utils.js", "src/eventPage.js"],
                  "persistent": true },
  "page_action": {
      "default_icon": {
          "19": "icons/0highlight19x19.png",
          "38": "icons/0highlight38x38.png"
      },
      "default_title": "Highlight this page"
  },
  "icons": { "128": "icons/128x128.png",
              "48": "icons/48x48.png"},
  "manifest_version": 2,
  "minimum_chrome_version": "41"
}
